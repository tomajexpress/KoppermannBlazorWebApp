        <div class="col-sm-3">
            <input type="text" class="form-control mb-2 mr-sm-2" placeholder="Customer" id="customerCode" value="100000" />
        </div>

        <div class="col-sm-4">
            <input type="text" class="form-control mb-2 mr-sm-2" id="customerName" value="Koppermann Conputersystem GmbH" />
        </div>

        <div class="col-sm-2">
            <label for="priority" class="mr-sm-2">Choose Priority: </label>
        </div>
        <div class="col-sm-2">
            <input type="number" class="form-control mb-2 mr-sm-2" id="priority" value="1" />
        </div>
    </div>
</div>