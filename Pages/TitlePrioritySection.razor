<div class="container form-group p-3 my-3 bg-dark text-white">
    <div class="row">
        <div class="col-sm-1">
            <label for="title">Title: </label>
        </div>

        <div class="col-sm-11">
            <input type="text" class="form-control" id="title" value="Outlook Integration Test Message" required />

            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
